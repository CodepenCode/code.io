    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script> -->
    <script src="https://kit.fontawesome.com/a4218e0c32.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        $(function () {
            var availableTags = [
                "Afghanistan",
                "Albania",
                "Australia",
                "Bangladesh",
                "Bhutan",
                "Brazil",
                "Canada",
                "Denmark",
                "Egypt",
                "France",
                "Germany",
                "India",
                "Indonesia",
                "Kenya",
                "Malaysia",
                "Nepal",
                "Russia",
                "Spain",
                "Thailand",
                "Vietnam",
                "United Kingdom",
                "United States of America"
            ];
            $("#country").autocomplete({
                source: availableTags
            });
        });
        $('.slider').slick({
            infinite: true,
            dots: false,
            slidesToShow: 1,
            slidesToScroll: 1,
            nextArrow: '<i class="fa-solid fa-angle-right"></i></a>',
            prevArrow: '<i class="fa-solid fa-angle-left"></i></a>'
        });
        $(document).ready(function () {
            $(".bars").click(function () {
                $(".mobile-bottom").slideToggle(1500);
            });
        });

        const state = {
            volunteer: false,
            teach: false,
            intern: false,
            country: false,
            activity: false,
            date: false,
            duration: false,
            age: false
        };

        function update() {
            const total = Object.values(state).filter(Boolean).length;
            document.querySelectorAll('.badge-count').forEach(el => {
                el.textContent = total;
            });
        }

        /* CHECKBOXES (each one = 1) */
        ['volunteer', 'teach', 'intern'].forEach(id => {
            const el = document.getElementById(id);
            el.addEventListener('change', () => {
                state[id] = el.checked;
                update();
            });
        });

        /* COUNTRY */
        country.addEventListener('input', e => {
            state.country = e.target.value.trim() !== "";
            update();
        });

        /* ACTIVITY */
        Animal.addEventListener('change', e => {
            state.activity = e.target.value !== "";
            update();
        });

        /* DATE */
        document.querySelectorAll('.dropdown-menu .dropdown-item').forEach(item => {
            item.addEventListener('click', () => {
                const btn = item.closest('.dropdown').querySelector('button');
                btn.textContent = item.textContent.trim();

                const allFilled = [...document.querySelectorAll('.date-btn')]
                    .every(b => b.textContent !== b.dataset.default);

                state.date = allFilled;
                update();
            });
        });

        /* DURATION */
        const slider = document.getElementById('range');
        let touched = false;

        noUiSlider.create(slider, {
            start: [1, 10],
            connect: true,
            range: { min: 1, max: 10 }
        });

        slider.noUiSlider.on('update', v => {
            rangeText.textContent =
                Math.round(v[0]) + " week - " + Math.round(v[1]) + " weeks";
        });

        slider.noUiSlider.on('change', () => {
            if (!touched) {
                touched = true;
                state.duration = true;
                update();
            }
        });

        /* AGE */
        document.querySelectorAll('.age-btn + .dropdown-menu a').forEach(item => {
            item.addEventListener('click', () => {
                const btn = document.querySelector('.age-btn');
                btn.textContent = item.textContent.trim();
                state.age = btn.textContent !== "--";
                update();
            });
        });



        $(document).ready(function () {

            $(".click").click(function (e) {
                e.preventDefault();

                $(".filter-backdrop").fadeToggle(300);
                $(".slide-wrapper").slideToggle(1500);

                $("body").toggleClass("overflow-hidden");
            });

            $(".close-btn, .filter-backdrop").click(function () {
                $(".filter-backdrop").fadeOut(300);
                $(".slide-wrapper").slideUp(1500);
                $("body").removeClass("overflow-hidden");
            });

        });

    </script>
</body>

