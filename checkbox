import React, { useState } from "react";
import "./App.css";

function MoodThought() {
  const [mood, setMood] = useState("");
  const [thought, setThought] = useState("");

  const handleMoodChange = (e) => {
    const selectedMood = e.target.value;
    setMood(selectedMood);

    if (selectedMood === "happy") {
      setThought("Keep smiling! Happiness looks good on you");
    } else if (selectedMood === "sad") {
      setThought("It's okay to feel sad. Better days are coming");
    } else if (selectedMood === "angry") {
      setThought("Take a deep breath. Calm mind brings better decisions");
    } else if (selectedMood === "motivated") {
      setThought("Stay focused and never give up! You can do it");
    } else {
      setThought("");
    }
  };

  return (
    <div className="container">
      <h2 className="title">How Are You Feeling Today?</h2>

      <select value={mood} onChange={handleMoodChange} className="select-box">
        <option value="">-- Select Your Mood --</option>
        <option value="happy">Happy</option>
        <option value="sad">Sad</option>
        <option value="angry">Angry</option>
        <option value="motivated">Motivated</option>
      </select>

      {thought && (
        <p style={{ marginTop: "20px", fontWeight: "bold", color: "#333" }}>{thought}</p>
      )}
    </div>
  );
}

export default MoodThought;



