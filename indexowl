                "Thailand",
                "Vietnam",
                "United Kingdom",
                "United States of America"
            ];
            $("#country").autocomplete({
                source: availableTags
            });
            $("#country-1").autocomplete({
                source: availableTags
            });
        });


        $(document).ready(function () {
            $(".hamburger").click(function () {
                $(".mobile-bottom").slideToggle(1500);
            });
        });
