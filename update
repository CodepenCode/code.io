    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script> -->
    <script src="https://kit.fontawesome.com/a4218e0c32.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        /* =====================================================
           GLOBAL FILTER STATE (single source of truth)
        ===================================================== */
        const FILTER_STATE = {
            cause: new Set(),
            country: "",
            activity: "",
            startDate: {
                from: { m: null, d: null, y: null },
                to: { m: null, d: null, y: null }
            },
            duration: { min: null, max: null },
            age: null
        };

        const DEFAULT_DURATION = { min: 10, max: 30 };

        /* =====================================================
           BADGE UPDATE (FIXED COUNT LOGIC)
        ===================================================== */
        function updateBadgeCount() {
            let count = 0;

            if (FILTER_STATE.cause.size > 0) count++;
            if (FILTER_STATE.country.trim() !== "") count++;
            if (FILTER_STATE.activity !== "") count++;

            const sd = FILTER_STATE.startDate;
            if (
                (sd.from.m && sd.from.d && sd.from.y) ||
                (sd.to.m && sd.to.d && sd.to.y)
            ) count++;

            if (
                FILTER_STATE.duration.min !== null &&
                (
                    FILTER_STATE.duration.min !== DEFAULT_DURATION.min ||
                    FILTER_STATE.duration.max !== DEFAULT_DURATION.max
                )
            ) count++;

            if (FILTER_STATE.age && FILTER_STATE.age !== "--") count++;

            document.querySelectorAll(".badge").forEach(b => b.textContent = count);
        }

        /* =====================================================
           CAUSE (DESKTOP CHECKBOXES)
        ===================================================== */
        $("#volunteer,#teach,#intern").on("change", function () {
            FILTER_STATE.cause.clear();
            $("#volunteer:checked").length && FILTER_STATE.cause.add("volunteer");
            $("#teach:checked").length && FILTER_STATE.cause.add("teach");
            $("#intern:checked").length && FILTER_STATE.cause.add("intern");
            updateBadgeCount();
        });

        /* =====================================================
           COUNTRY + ACTIVITY
        ===================================================== */
        $("#country").on("input", function () {
            FILTER_STATE.country = this.value;
            updateBadgeCount();
        });

        $("#Animal").on("change", function () {
            FILTER_STATE.activity = this.value;
            updateBadgeCount();
        });

        /* =====================================================
           START DATE (ALL VIEWS)
        ===================================================== */
        $(document).on("click", "#dateFilter .dropdown-item", function () {
            const btn = $(this).closest(".dropdown").find(".dropdown-toggle");
            const val = $(this).text();
            const def = btn.data("default");

            btn.text(val === def ? def : val);

            const container = btn.closest("#dateFilter");
            const values = container.find(".dropdown-toggle").map(function () {
                const t = $(this).text();
                return t === $(this).data("default") ? null : t;
            }).get();

            if (values.length >= 3) {
                FILTER_STATE.startDate.from = { m: values[0], d: values[1], y: values[2] };
            }
            if (values.length >= 6) {
                FILTER_STATE.startDate.to = { m: values[3], d: values[4], y: values[5] };
            }

            updateBadgeCount();
        });

        /* =====================================================
           AGE (ALL VIEWS)
        ===================================================== */
        $(document).on("click", "#ageFilter .dropdown-item", function () {
            const val = $(this).text();
            FILTER_STATE.age = (val === "--") ? null : val;
            updateBadgeCount();
        });

        /* =====================================================
           DURATION (ALL 3 SLIDERS â€“ NO DOUBLE COUNT)
        ===================================================== */
        function onDurationChange(min, max) {
            FILTER_STATE.duration.min = min;
            FILTER_STATE.duration.max = max;
            updateBadgeCount();
        }

        /* MOBILE */
        if (typeof slider !== "undefined") {
            slider.noUiSlider.on("update", v =>
                onDurationChange(Math.round(v[0]), Math.round(v[1]))
            );
        }

        /* TAB */
        if (typeof slider1 !== "undefined") {
            slider1.noUiSlider.on("update", v =>
                onDurationChange(Math.round(v[0]), Math.round(v[1]))
            );
        }

        /* DESKTOP */
        if (typeof slider2 !== "undefined") {
            slider2.noUiSlider.on("update", v =>
                onDurationChange(Math.round(v[0]), Math.round(v[1]))
            );
        }

        /* =====================================================
           RESET HANDLERS
        ===================================================== */
        $(document).on("click", "[data-reset='duration']", function () {
            slider?.noUiSlider.set([10, 30]);
            slider1?.noUiSlider.set([10, 30]);
            slider2?.noUiSlider.set([10, 30]);

            FILTER_STATE.duration = { min: 10, max: 30 };
            updateBadgeCount();
        });

        $(document).on("click", "[data-reset='date']", function () {
            FILTER_STATE.startDate = {
                from: { m: null, d: null, y: null },
                to: { m: null, d: null, y: null }
            };

            $("#dateFilter .dropdown-toggle").each(function () {
                $(this).text($(this).data("default"));
            });

            updateBadgeCount();
        });

        var slider = document.getElementById('range');
        var rangeText = document.getElementById('rangeText');

        noUiSlider.create(slider, {
            start: [10, 30],
            connect: true,
            range: {
                min: 1,
                max: 52
            },
            step: 1
        });

        // Update <p> when slider moves
        slider.noUiSlider.on('update', function (values) {
            var min = Math.round(values[0]);
            var max = Math.round(values[1]);

            rangeText.innerText = min + " week" + (min > 1 ? "s" : "") +
                " - " +
                max + " week" + (max > 1 ? "s" : "");
        });

        var slider1 = document.getElementById('range1');
        var rangeText1 = document.getElementById('rangeText1');

        noUiSlider.create(slider1, {
            start: [10, 30],
            connect: true,
            range: {
                min: 1,
                max: 52
            },
            step: 1
        });

        // Update <p> when slider moves
        slider1.noUiSlider.on('update', function (values) {
            var min = Math.round(values[0]);
            var max = Math.round(values[1]);

            rangeText1.innerText = min + " week" + (min > 1 ? "s" : "") +
                " - " +
                max + " week" + (max > 1 ? "s" : "");
        });
        var slider2 = document.getElementById('range2');
        var rangeText2 = document.getElementById('rangeText2');

        noUiSlider.create(slider2, {
            start: [10, 30],
            connect: true,
            range: {
                min: 1,
                max: 52
            },
            step: 1
        });

        // Update <p> when slider moves
        slider2.noUiSlider.on('update', function (values) {
            var min = Math.round(values[0]);
            var max = Math.round(values[1]);

            rangeText2.innerText = min + " week" + (min > 1 ? "s" : "") +
                " - " +
                max + " week" + (max > 1 ? "s" : "");
        });


        $("#filter").on("click", function (e) {
            e.preventDefault();
            $(".more-filters").slideToggle(1000);
        });

        $(".dropdown-item").click(function () {
            $(this).closest(".dropdown")
                .find(".dropdown-toggle")
                .text($(this).text());
        });

        const range = document.getElementById("range");
        function updateFill() {
            let percent = ((range.value - range.min) / (range.max - range.min)) * 100;
            range.style.setProperty("--fill", percent + "%");
        }
        updateFill();
        range.addEventListener("input", updateFill);
    </script>
</body>

</html>
